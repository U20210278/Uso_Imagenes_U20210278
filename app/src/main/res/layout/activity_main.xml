<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderAutoCycleEnabled="true"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderScrollTimeInSec="2"
        app:sliderStartAutoCycle="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_slider"
        android:layout_marginTop="11dp"
        android:autoText="false"
        android:text="Kimetsu no yaiba"
        android:textAlignment="center"
        android:textColor="#121111"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="374dp"
        android:layout_height="104dp"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginStart="-280dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="-94dp"
        android:layout_toEndOf="@+id/textView3"
        android:autoText="false"
        android:text="La obra sigue las aventuras de Tanjirō Kamado, un adolescente cuya familia fue cruelmente asesinada por un Demonio el cual convirtió a su hermana Nezuko en una de estas criaturas, obligando a Tanjirō a emprender un viaje para cazar a estos seres y de paso ayudar a su hermana a recuperar su humanidad."
        android:textAlignment="viewStart"
        android:textColor="#121111"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="284dp"
        android:layout_height="23dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="93dp"
        android:layout_marginBottom="-27dp"
        android:text="Fecha de lanzamiento "
        android:textColor="#171616"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="301dp"
        android:layout_height="41dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="-17dp"
        android:layout_marginBottom="-48dp"
        android:text="La temporada se emitió por primera vez desde abril a septiembre de 2019"
        android:textColor="#131212"
        android:textColorHint="#121010" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_marginEnd="-29dp"
        android:layout_marginBottom="-20dp"
        android:text="Personajes Principales"
        android:textColor="#0C0C0C"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="356dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="-36dp"
        android:text="Inosuke Hashibira,Zenitsu Agatsuma,Nezuko Kamado,Tanjiro Kamado,Giyu Tomioka,Gyomei Himejima,Kokushibo,Muzan Kibutsuji."
        android:textColor="#0B0A0A" />

    <Button
        android:id="@+id/btnSitio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="-73dp"
        android:text="Sitio Web" />

</RelativeLayout>